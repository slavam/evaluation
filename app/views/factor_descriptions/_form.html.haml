%h1
  = submit
  показатель
.content
  - form_for @factor do |form|
    %table.card
      %tr
        %th Полное название:
        %td= form.text_field :name, :size => 100
      %tr
        %th Короткое название:
        %td= form.text_field :short_name, :size => 50
      %tr
        %th Единица измерения:
        %td= select :units, "unit_id", Unit.all.collect {|u| [ u.description, u.id ] }
    %br
  
    = submit_tag submit
